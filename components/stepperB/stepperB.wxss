/* components/stepperB/stepperB.wxss */

/* 步进器 */
.stepper {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}

.stepper .stepBtn {
  width: 36rpx;
  height: 36rpx;
  overflow: hidden;
}

.stepper .stepBtn image {
  width: 100%;
  height: 100%;
}

/* 禁用状态 */
.stepper .disabled {
  display: none;
}

/* 数值 */
.stepper .stepIpt {
  margin: 0 10rpx;
  width: 50rpx;
  color: #1A1A1A;
  font-size: 28rpx;
  text-align: center;
}

/* 步进器 end */