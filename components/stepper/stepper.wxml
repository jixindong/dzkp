<!--components/stepper/stepper.wxml-->
<!-- 步进器 -->
<view class="stepper">
	<!-- 减号 -->
	<navigator url="#" class="stepBtn {{minusStatus}}" bindtap="bindMinus">
		<image src="/images/minus.png"></image>
	</navigator>

	<!-- 数值 -->
	<input type="number" bindinput="bindManual" value="{{num}}" hidden="{{num == 0}}" />

	<!-- 加号 -->
	<navigator url="#" class="stepBtn" bindtap="bindPlus">
		<image src="/images/plus.png"></image>
	</navigator>
</view>
<!-- 步进器 end -->