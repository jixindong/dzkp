/* components/stepper/stepper.wxss */

/* 步进器 */
.stepper {
  display: flex;
  flex-flow: row nowrap;
}

.stepper .stepBtn {
  width: 40rpx;
  height: 40rpx;
  overflow: hidden;
  border-radius: 50%;
}

.stepper .stepBtn image {
  width: 100%;
  height: 100%;
}

/* 禁用状态 */
.stepper .disabled {
  display: none;
}

/* 数值 */
.stepper input {
  margin: 0 10rpx;
  width: 50rpx;
  color: #1A1A1A;
  font-size: 28rpx;
  text-align: center;
}

/* 步进器 end */