/* pages/address/addAddress.wxss */

/* 新增地址 */
.infoBox {
  margin-top: 20rpx;
}

.infoBox .infoLine {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  color: #1A1A1A;
  font-size: 26rpx;
}

.infoBox .infoLine input {
  flex: 1;
  padding: 0 20rpx;
  text-align: right;
}

/* picker */
.infoBox .infoLine picker {
  flex: 1;
  text-align: right;
}

.infoBox .infoLine picker .choice {
  color: #808080;
}

.infoBox .infoLine picker .arrow {
  margin: 0 0 0 20rpx;
  width: 12rpx;
  height: 22rpx;
}

/* picker end */

/* checkbox */

/* checkbox 选项框大小 */

.infoBox .infoLine checkbox .wx-checkbox-input {
  width: 32rpx;
  height: 32rpx;
  border: 1rpx solid #999;
  border-radius: 50%;
}

/* checkbox 选中后样式 */

.infoBox .infoLine checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background-color: #1865F3;
  border: 1rpx solid #1865F3;
  border-radius: 50%;
}

/* checkbox 选中后图标样式 */

.infoBox .infoLine checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  font-size: 24rpx;
  text-align: center;
  color: #fff;
  background-color: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

/* checkbox end */

.infoBox .line {
  margin: 0 20rpx;
  height: 2rpx;
  background-color: #e6e6e6;
}

/* 新增地址 end */

/* 保存地址 */
.saveAddress {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 80rpx auto;
  width: 400rpx;
  height: 80rpx;
  color: #fff;
  font-size: 26rpx;
  background-color: #1865F3;
  border-radius: 10rpx;
}

/* 保存地址 end */