/* pages/address/chooseAddress.wxss */

/* 搜索栏 */
.searchBar {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #ccc;
}

.searchBar input {
  width: 100%;
  color: #666;
  font-size: 26rpx;
}

.searchBar image {
  margin: 0 20rpx;
  width: 36rpx;
  height: 36rpx;
}

/* 搜索栏 end */

/* 地址 */
.addrBox {
  display: flex;
  flex-flow: column nowrap;
  padding: 20rpx;
}

/* 地址卡片 */
.addrBox .address {
  display: flex;
  flex-flow: column nowrap;
  padding: 10rpx 0;
  color: #666;
  font-size: 26rpx;
  border-bottom: 1rpx solid #ccc;
}

.addrBox .address .title {
  margin: 10rpx 0;
  color: #333;
  font-size: 28rpx;
}

/* 地址卡片 end */
/* 地址 end */