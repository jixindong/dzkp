/* pages/buy/buy.wxss */

.container {
  padding: 0 20rpx;
}

/* 地址 */

.addressBox {
  display: flex;
  flex-flow: column nowrap;
  margin: 40rpx 0;
  padding: 30rpx;
  border-radius: 10rpx;
}

.addressBox .address {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  padding: 10rpx 6rpx 10rpx 0;
  border-bottom: 1rpx solid #e6e6e6;
}

.addressBox .address image {
  width: 40rpx;
  height: 40rpx;
}

.addressBox .address .chooseAddress {
  display: flex;
  flex-flow: column nowrap;
  margin: 0 20rpx;
  width: 440rpx;
}

.addressBox .address .chooseAddress .choice {
  padding: 30rpx 0;
  width: 100%;
  color: #ccc;
  font-size: 26rpx;
}

.addressBox .address .chooseAddress .addrDetailBox {
  display: flex;
  flex-flow: column nowrap;
}

.addressBox .address .chooseAddress .addrDetailBox .detail {
  width: 100%;
  color: #1a1a1a;
  font-size: 28rpx;
}

.addressBox .address .chooseAddress .addrDetailBox .location {
  width: 100%;
  color: #999;
  font-size: 22rpx;
}

.addressBox .address .common {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: auto;
  width: 74rpx;
  height: 36rpx;
  color: #fff;
  font-size: 22rpx;
  background-color: #1a1a1a;
  border-radius: 10rpx;
}

/* 地址 end */

/* 市场 */

.marketInfo {
  display: flex;
  flex-flow: column nowrap;
  margin: 0 0 20rpx 0;
  padding: 20rpx;
  border-radius: 10rpx;
}

.marketInfo .title {
  color: #666;
  font-size: 28rpx;
}

.marketInfo .detail {
  padding: 30rpx 10rpx;
  font-size: 24rpx;
}

/* 市场 end */

/* 购买商品 */

.product {
  display: flex;
  flex-flow: column nowrap;
  padding: 20rpx;
  border-radius: 10rpx;
}

.product .title {
  color: #1a1a1a;
  font-weight: bold;
}

.product textarea {
  padding: 10rpx;
  width: 100%;
  height: 300rpx;
  color: #ccc;
}

/* 购买商品 end */

/* 物品重量 */
.container .weightBox {
  display: flex;
  flex-flow: column nowrap;
  margin: 20rpx 0;
  font-size: 28rpx;
  background-color: transparent;
}

.container .weightBox .title {
  margin: 10rpx 0;
  color: #333;
  font-size: 30rpx;
  font-weight: bold;
}

.container .weightBox .weight {
  display: flex;
  align-items: center;
  padding: 16rpx 10rpx;
}

.container .weightBox .weight input {
  padding: 0 10rpx;
  width: 100rpx;
  font-size: 24rpx;
}

/* 物品重量 end */

/* 购买 */

.purchase {
  display: flex;
  flex-flow: column nowrap;
  margin: 20rpx 0;
  padding: 20rpx 0 0;
  border-radius: 10rpx;
}

.purchase .pLine {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  padding: 10rpx 20rpx 30rpx;
}

.purchase .pLine .leftImg {
  width: 30rpx;
  height: 30rpx;
}

.purchase .pLine .pBox {
  position: relative;
  flex: 1;
  display: flex;
  align-items: center;
  margin: 0 0 0 20rpx;
}

.purchase .pLine .pBoxBorder:after {
  position: absolute;
  left: 0;
  bottom: -20rpx;
  display: block;
  width: 100%;
  height: 1rpx;
  content: '';
  border-bottom: 1rpx solid #e6e6e6;
}

.purchase .pLine .pBox .title {
  margin-right: auto;
  color: #1a1a1a;
  font-size: 28rpx;
}

.purchase .pLine .pBox picker {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  color: #999;
  font-size: 26rpx;
}

.purchase .pLine .pBox picker image {
  margin: 0 10rpx 0 20rpx;
  width: 12rpx;
  height: 22rpx;
}

.purchase .pLine .pBox picker .active {
  color: #1a1a1a;
}

/* 备注按钮 */

.purchase .pLine .pBox .remark {
  flex: 1;
  margin-left: 20rpx;
  padding: 10rpx;
  text-align: right;
}

.purchase .pLine .pBox .remark text {
  display: inline-block;
  max-width: 500rpx;
  color: #999;
  font-size: 26rpx;
}

/* 购买 end */

/* 下单 */

.placeOrder {
  align-self: flex-end;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  margin: 30rpx 30rpx 40rpx 0;
  padding: 20rpx 40rpx;
  background-color: #f78617;
  border-radius: 40rpx;
  box-shadow: 0 0 40rpx 0 rgba(247, 134, 23, 0.5);
}

.placeOrder text {
  padding: 0 6rpx;
  color: #fff;
  font-size: 26rpx;
}

/* 下单 end */

/* 备注隐藏盒子 */

.remarkBox {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
}

.remarkBox .mask {
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
}

.remarkBox .container {
  position: absolute;
  left: 0;
  bottom: 0;
  padding: 20rpx;
  width: 100%;
  background-color: #fff;
}

.remarkBox .container textarea {
  padding: 20rpx;
  width: 100%;
  font-size: 26rpx;
  background-color: rgb(245, 245, 245);
}

.remarkBox .container .sure {
  margin: 20rpx auto;
  width: 360rpx;
  height: 74rpx;
  line-height: 74rpx;
  color: #fff;
  font-size: 26rpx;
  text-align: center;
  background-color: #1865f3;
  border-radius: 10rpx;
}

/* 备注隐藏盒子 end */