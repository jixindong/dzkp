/* pages/user/user.wxss */

/* 头部 */
.header {
  width: 100%;
  height: 200rpx;
}

/* 头部 end */

/* 主体 */
.container {
  margin-top: -130rpx;
}

/* 个人信息 */
.container .userInfo {
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  margin: 20rpx;
  color: #999;
  font-size: 26rpx;
  border-radius: 10rpx;
}

.container .userInfo text {
  margin: 20rpx 0;
}

/* 头像 */
.container .userInfo .avatarBox {
  margin-top: -45rpx;
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  overflow: hidden;
}

.container .userInfo .avatarBox .avatar {
  padding: 0;
  width: 90rpx;
  height: 90rpx;
}

.container .userInfo .avatarBox .avatar image {
  width: 100%;
  height: 100%;
}

/* 昵称 */

.container .userInfo .userName {
  font-size: 30rpx;
  color: #1a1a1a;
}

/* 电话 */
.container .userInfo .tel {
  margin: 0 0 20rpx;
  color: #666;
  font-size: 26rpx;
}

.container .userInfo .tel text {
  margin: 0;
}

.container .userInfo .tel .verify {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  color: #1865F3;
}

.container .userInfo .tel .verify image {
  margin-left: 10rpx;
  width: 12rpx;
  height: 22rpx;
}

/* 个人信息 end */

/* 功能列表 */
.container .fList {
  display: flex;
  flex-flow: column nowrap;
  margin: 0 20rpx;
  padding: 0 20rpx;
  border-radius: 10rpx;
}

.container .fList .listLine {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  color: #1A1A1A;
  font-size: 26rpx;
}

.container .fList .listLine image {
  margin: 0 20rpx 0 0;
  width: 28rpx;
  height: 28rpx;
}

.container .fList .listLine image.arrow {
  margin-left: auto;
  width: 12rpx;
  height: 22rpx;
}

.container .fList .serveBtn {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  width: 100%;
  color: #1A1A1A;
  font-size: 26rpx;
  font-weight: normal;
  background-color: #fff;
}

.container .fList .serveBtn image {
  margin: 0 20rpx 0 0;
  width: 28rpx;
  height: 28rpx;
}

.container .fList .serveBtn image.arrow {
  margin-left: auto;
  width: 12rpx;
  height: 22rpx;
}

.container .fList .line {
  height: 2rpx;
  background-color: #E6E6E6;
}

/* 功能列表 end */
/* 主体 end */

/* 验证手机号隐藏盒子 */
.telBox {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
}

.telBox .mask {
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
}

.telBox .container {
  position: absolute;
  left: 0;
  bottom: 0;
  padding: 40rpx 20rpx;
  width: 100%;
  background-color: #fff;
}

.telBox .container .telLine {
  display: flex;
  flex-flow: row nowrap;
  align-items: flex-end;
  margin: 20rpx 60rpx;
}

.telBox .container .telLine input {
  flex: 1;
  padding: 0 10rpx;
  color: #333;
  font-size: 26rpx;
  border-bottom: 1rpx solid #ccc;
}

.telBox .container .telLine .getCode {
  margin: 0 0 0 10rpx;
  width: 210rpx;
  height: 70rpx;
  line-height: 70rpx;
  color: #fff;
  font-size: 26rpx;
  text-align: center;
  background-color: #0094ff;
}

.telBox .container .telLine .getCode.disabled {
  background-color: #ccc;
}

.telBox .container .sure {
  margin: 50rpx 60rpx 0;
  padding: 16rpx 0;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  background-color: #1865F3;
}

/* 验证手机号隐藏盒子 end */