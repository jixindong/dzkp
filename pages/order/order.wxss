/* pages/order/order.wxss */
/* 标题列表 */

.tabHead {
  height: 80rpx;
  line-height: 80rpx;
  white-space: nowrap;
  overflow: hidden;
}

.tabHead .tabHeadItem {
  position: relative;
  display: inline-block;
  width: 16.6%;
  color: #999;
  font-size: 26rpx;
  text-align: center;
}

.tabHead .tabHeadItem.active {
  color: #1865f3;
}

.tabHead .tabHeadItem.active:after {
  position: absolute;
  left: 35%;
  bottom: 0;
  display: block;
  width: 30%;
  height: 6rpx;
  content: '';
  background-color: #1865f3;
}

/* 标题列表 end */

/* 内容 */
.tabContent .scrollBox {
  height: 100%;
}
/* 订单卡片 */
.tabContent .scrollBox .orderCard {
  margin: 20rpx;
  padding: 0 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
}
/* 头部 */
.tabContent .scrollBox .orderCard .header{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  color: #999;
  font-size: 24rpx;
  border-bottom: 1rpx solid #e6e6e6;
}
.tabContent .scrollBox .orderCard .header .title{
  color: #1a1a1a;
  font-size: 30rpx;
  font-weight: bold;
}
.tabContent .scrollBox .orderCard .header .waitPay{
  color: #F88616;
}
.tabContent .scrollBox .orderCard .header .waitReceive{
  color: #1865F3;
}
.tabContent .scrollBox .orderCard .header .proceed{
  color: #1A1A1A;
}
/* 中部 */
.tabContent .scrollBox .orderCard .detailBox{
  display: flex;
  flex-flow: column nowrap;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #e6e6e6;
}
.tabContent .scrollBox .orderCard .detailBox .detail{
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  padding: 10rpx 0;
  color: #999;
  font-size: 24rpx;
}
.tabContent .scrollBox .orderCard .detailBox .detail image{
  margin: 0 20rpx 0 0;
  width: 24rpx;
  height: 28rpx;
}
.tabContent .scrollBox .orderCard .detailBox .detail .address{
flex: 1;
}
/* 底部 */
.tabContent .scrollBox .orderCard .footer{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}
.tabContent .scrollBox .orderCard .footer .time{
  display: flex;
  align-items: center;
  color: #ccc;
  font-size: 26rpx;
}
.tabContent .scrollBox .orderCard .footer .time image{
  margin: 0 20rpx 0 0;
  width: 24rpx;
  height: 24rpx;
}
.tabContent .scrollBox .orderCard .footer .getCode{
color: #1a1a1a;
font-size: 30rpx;
font-weight: bold;
}
/* 订单卡片 end */
/* 内容 end */