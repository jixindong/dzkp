/* pages/market/market.wxss */

page {
  background-color: #fff;
}

/* banner */
.banner {
  display: flex;
  flex-flow: column nowrap;
}

.banner .bannerImg {
  width: 100%;
  height: 280rpx;
}

.banner .bannerTitle {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
  color: #1A1A1A;
  font-size: 30rpx;
  font-weight: bold;
}

.banner .bannerTitle .titleBox {
  display: flex;
  align-items: center;
}

.banner .bannerTitle .titleBox image {
  margin: 0 20rpx 0 40rpx;
  width: 36rpx;
  height: 30rpx;
}

.banner .bannerTitle .tip {
  display: flex;
  align-items: center;
  margin: 0 12rpx 0 0;
  color: #F78617;
  font-size: 26rpx;
  font-weight: normal;
}

.banner .bannerTitle .tip image {
  margin: 0 10rpx;
  width: 36rpx;
  height: 26rpx;
}

/* banner end */

/* 标题列表 */

.tabHead {
  height: 80rpx;
  line-height: 80rpx;
  white-space: nowrap;
  overflow: hidden;
  background-color: #f6f6f6;
}

.tabHead .tabHeadItem {
  position: relative;
  display: inline-block;
  width: 25%;
  color: #666;
  font-size: 28rpx;
  text-align: center;
  background-color: #f6f6f6;
}

.tabHead .tabHeadItem.active {
  color: #009B42;
  font-size: 32rpx;
  font-weight: bold;
}

.tabHead .tabHeadItem.active:after {
  position: absolute;
  left: 35%;
  bottom: 0;
  display: block;
  width: 30%;
  height: 6rpx;
  content: '';
  background-color: #009B42;
}

/* 标题列表 end */

/* 商品列表 */
.tabContent swiper-item {
  height: auto !important;
}

/* 商品 */
.tabContent swiper-item .good {
  display: flex;
  flex-flow: row nowrap;
  padding: 30rpx 20rpx;
}

.tabContent swiper-item .good .goodImg {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
}

.tabContent swiper-item .good .goodInfo {
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
  margin: 0 auto 0 20rpx;
  color: #1A1A1A;
  font-size: 28rpx;
}

.tabContent swiper-item .good .goodInfo .price {
  color: #F4330D;
  font-weight: bold;
}

/* 步进器 */
.tabContent swiper-item .good stepper {
  align-self: center;
}

/* 商品 end */

/* 商品列表 end */

/* 购物车 */
.cart {
  position: fixed;
  left: 50%;
  bottom: 50rpx;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  margin: 0 0 0 -320rpx;
  width: 640rpx;
  height: 84rpx;
  overflow: hidden;
  background-color: #fff;
  border-radius: 42rpx;
  box-shadow: 0 0 10rpx 0 rgba(247, 134, 23, 0.5);
}

.cart .goodsNum {
  position: relative;
  margin: 0 30rpx 0 40rpx;
  width: 50rpx;
  height: 45rpx;
}

.cart .goodsNum image {
  width: 100%;
  height: 100%;
}

.cart .goodsNum .num {
  position: absolute;
  top: -10rpx;
  right: -12rpx;
  padding: 0 2rpx;
  min-width: 24rpx;
  color: #fff;
  font-size: 16rpx;
  text-align: center;
  background-color: #F4330D;
  border-radius: 50%;
}

.cart .price {
  color: #F4330D;
  font-size: 30rpx;
  font-weight: bold;
}

.cart .sure {
  margin: 0 0 0 auto;
  width: 245rpx;
  line-height: 84rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  background-color: #F78617;
}

/* 购物车 end */