/* pages/coupon/coupon.wxss */

/* 优惠券卡片 */
.couponCard {
  display: flex;
  flex-flow: row nowrap;
  margin: 20rpx;
  overflow: hidden;
  background-color: #fff;
  border-radius: 10rpx;
}

.couponCard text {
  margin: 5rpx 0;
}

.couponCard .priceBox {
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
  margin: 20rpx 0;
  padding: 0 20rpx;
  color: #1865F3;
  font-size: 26rpx;
  border-right: 1rpx dashed #D9D9D9;
}

.couponCard .priceBox.used {
  color: #ccc;
}

.couponCard .priceBox .price {
  font-size: 50rpx;
}

.couponCard .limit {
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  margin: 20rpx;
  color: #999;
  font-size: 24rpx;
}

.couponCard .limit.used {
  color: #ccc;
}

.couponCard .limit .time {
  color: #1a1a1a;
  font-size: 28rpx;
}

.couponCard .limit .time.used {
  color: #ccc;
}

.couponCard .flag {
  position: relative;
  margin-left: auto;
  width: 120rpx;
  height: 180rpx;
}

.couponCard .flag image {
  width: 100%;
  height: 100%;
}

.couponCard .flag .tip {
  position: absolute;
  left: 0;
  top: 0;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  color: #fff;
  font-size: 28rpx;
  background-color: transparent;
}

.couponCard .flag .tip text {
  margin: -1rpx 0;
}

/* 优惠券卡片 end */